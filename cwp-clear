clear;

echo '
###############################
# AUTORIZA!AUTORIZA!AUTORIZA! #
###############################
###############################';

sudo -v;

echo '
##############################
# APLICANDO LIMPIEZA!	     #
##############################
##############################';

clear;

echo ' eliminando procesos
#######################################
# MUERTE DE LOS PROCESOS IMPORTANTES  #
# DESTRUIR PROCESOS COMPLETOS         #
#######################################
';

service httpd stop 
service mysql stop
service named stop 
service  stop

sudo killall -9 httpd
sudo killall -9 mysql

service httpd stop 
service mysql stop
 
rm -rfv /usr/local/cwpsrv/

